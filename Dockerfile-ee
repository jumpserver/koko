ARG VERSION

FROM registry.fit2cloud.com/jumpserver/koko:${VERSION}-ce
ARG TARGETARCH

ARG DEPENDENCIES="                    \
        bash-completion               \
        curl                          \
        git                           \
        git-lfs                       \
        iputils-ping                  \
        jq                            \
        less                          \
        openssh-client                \
        telnet                        \
        unzip                         \
        vim                           \
        wget                          \
        xz-utils"

RUN set -ex \
    && apt-get update \
    && apt-get install -y --no-install-recommends ${DEPENDENCIES} \
    && apt-get clean
